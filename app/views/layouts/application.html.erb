<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "商品一覧", admin_items_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "会員一覧", admin_customers_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "注文履歴一覧", admin_root_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "ジャンル一覧", admin_genres_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </button>
            </li>

          <% elsif customer_signed_in? %>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "マイページ", customers_my_page_path %>
            </li>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "商品一覧", items_path %>
            </li>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "カート", cart_items_path %>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              </button>
            </li>

          <% else %>
            <li>
              <button type="button" class="btn btn-light">
                <%= link_to "About", about_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "商品一覧", admin_items_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "新規登録", new_customer_registration_path %>
              </button>
            </li>
            <li>
              <button type="button" class="btn btn-light">
              <%= link_to "ログイン", new_customer_session_path %>
              </button>
            </li>


          <% end %>
        </ul>
      </div>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>

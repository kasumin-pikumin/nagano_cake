<h3>会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<table class= "table table-borderless">

  <tbody>
    <tr>
      <th><%= f.label :会員ID%></th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th><%= f.label :名前 %></th>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.telephone_field :telephone_number %></td>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th><%= f.label :会員ステータス %></th>
      <td>
        <%= f.radio_button :is_deleted, "有効" %>
        <%= f.label :有効, '有効', value: false %>
        <%= f.radio_button :is_deleted, "退会" %>
        <%= f.label :退会, '退会', value: true %>
      </td>
    </tr>
  </tbody>

</table>

<%= f.submit "変更を保存", class: "btn btn-info" %>

<% end %>


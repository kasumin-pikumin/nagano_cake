<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h4>会員一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <th scope="row"><%= customer.id %></th>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %> <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                有効
              <% else customer.is_deleted == true %>
                退会
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
    </table>
   </div>
  </div>
</div>



<h3>会員一覧</h3>
<table class="table">
  <thead>
    <tr>
      <th ="col">会員ID</th>
      <th ="col">氏名</th>
      <th ="col">メールアドレス</th>
      <th ="col">ステータス</th>
    </tr>
  </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <th scope="row"><%= customer.id %></th>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
          </td>
        <td><%= customer.email %></td>
        <td>ステータス</td>
      </tr>
      <% end %>
    </tbody>



</table>


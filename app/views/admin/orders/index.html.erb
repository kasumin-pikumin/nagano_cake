<div class="container">
  <div class="row">
    <div class="col-lg">

    <h4>注文履歴一覧</h4>

      <table class= "table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= order.order_amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>



    </div>
  </div>
</div>
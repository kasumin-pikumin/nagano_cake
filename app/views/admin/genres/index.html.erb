
<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <div class="row">
    <div class="col-lg-10">
      <table class= "table table-borderless">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <th><%= f.label :ジャンル名 %></th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録' , class: "btn btn-success" %></th>
        <th></th>
      <% end %>
      </table>
    </div>

    <div class="col-lg-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id) , class: "btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

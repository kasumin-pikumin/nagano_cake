
<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name %>
  </div>
  <p><%= f.submit '新規登録' , class: "btn btn-success" %></p>
<% end %>



<table class="table">
  <thead>
    <tr>
      <th ="col">ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集", edit_admin_genre_path(genre.id) , class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="container">
  <h4>ジャンル編集</h4>
  <div class="row">
    <div class="col-lg-8">
      <table class= "table table-borderless">
      <%= form_with model: @genre ,url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <th><%= f.label :ジャンル名 %></th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '変更を保存' , class: "btn btn-success" %></th>
      <% end %>
      </table>
    </div>
  </div>
</div>
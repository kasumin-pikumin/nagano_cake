<h3>商品一覧</h3>
<table class="table">
  <thead>
    <tr>
      <th ="col">商品ID</th>
      <th ="col">商品名</th>
      <th ="col">税抜価格</th>
      <th ="col">ジャンル</th>
      <th ="col">ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td>ケーキ</td>
      <td>販売中</td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>商品一覧</h3>
<%= link_to "商品新規登録",new_admin_item_path, class: "btn btn-success" %>
<table class="table">
  <thead>
    <tr>
      <th ="col">商品ID</th>
      <th ="col">商品名</th>
      <th ="col">税抜価格</th>
      <th ="col">ジャンル</th>
      <th ="col">ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre_id %></td>
      <td><%= item.is_active  ? "販売中" : "販売停止中" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

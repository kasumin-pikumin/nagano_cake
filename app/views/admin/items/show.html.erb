<div class="container">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-lg-2">
      <%= image_tag @item.get_image, :size => '150x100' %>
    </div>
    <div class="col-lg-10">

<table class= "table table-borderless">

  <tbody>
    <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <th>税込価格(税抜価格)</th>
    <td><%= @item.price %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
      </tr>
  </tbody>

</table>

<%= link_to "編集", edit_admin_item_path , class: "btn btn-info" %>



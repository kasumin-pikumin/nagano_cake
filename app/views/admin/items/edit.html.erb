<div class="container">
  <h4>商品編集</h4>
  <div class="row">
    <div class="col-lg-10">
      <table class= "table table-borderless">

<%= form_with model: @item ,url: admin_item_path(@item.id), method: :patch do |f| %>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.select :genre_id, options_from_collection_for_select(@genres, :id, :name) %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :price %></td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td>
            <%= f.radio_button :is_active, "販売中" %>
            <%= f.label :販売中, '販売中', value: true %>
            <%= f.radio_button :is_active, "販売停止中" %>
            <%= f.label :販売停止中, '販売停止中', value: false %>
          </div>
        </tr>


  <p><%= f.submit '変更を保存' , class: "btn btn-success" %></p>
  </tr>

<% end %>



<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <p>ジャンル検索</p>
    </div>
    <div class="col-lg-10">
      <h1>ようこそながのCAKEへ！</h1>

      <h3>新着商品</h3>
      <% @items.each do |item| %>
        <p><%= link_to image_tag(item.get_image), show_items_path(item.id) %></p>
        <p><%= item.name %></p>
        <p>￥<%= item.price %>(税込)</p>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <h4>会員情報編集</h4>
  <div class="row">
    <div class = "col-lg-10">

    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= f.label :氏名 %></th>
            <td>【姓】<%= f.text_field :last_name %></td>
            <td>【名】<%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <th><%= f.label :フリガナ %></th>
            <td>【セイ】<%= f.text_field :last_name_kana %></td>
            <td>【メイ】<%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <th><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>

          <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address %></td>
          </tr>

          <tr>
            <th><%= f.label :電話番号（ハイフンなし）%></th>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>

          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <th></th>
            <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
            <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

    </div>
  </div>
</div>



<h3>会員情報編集</h3>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :名前 %>
    <p>【姓】<%= f.text_field :last_name %></p>
    <p>【名】<%= f.text_field :first_name %></p>
  </div>


  <div class="field">
    <%= f.label :フリガナ %>
    <p>【セイ】<%= f.text_field :last_name_kana %></p>
    <p>【メイ】<%= f.text_field :first_name_kana %></p>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %></br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %></br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %></br>
    <%= f.telephone_field :telephone_number %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %></br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  <% end %>
  <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>






<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: create_address_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録" , class: "btn btn-success" %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">郵便番号</th>
        <th scope="col">住所</th>
        <th scope="col">宛名</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <th scope="row"><%= address.postal_code %></th>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する" , edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する" , destroy_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
      </tbody>
  </table>
<% end %>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <p>【姓】<%= f.text_field :last_name %></p>
    <p>【名】<%= f.text_field :first_name %></p>
  </div>


  <div class="field">
    <%= f.label :フリガナ %>
    <p>【セイ】<%= f.text_field :first_name_kana %></p>
    <p>【メイ】<%= f.text_field :first_name_kana %></p>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-info btn-block" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

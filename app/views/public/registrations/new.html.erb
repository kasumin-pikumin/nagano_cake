<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h4>新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

         <table class="table table-borderless">
          <tbody>

            <tr>
              <th><%= f.label :名前 %></th>
              <td>【姓】<%= f.text_field :last_name %></td>
              <td>【名】<%= f.text_field :first_name %></td>
            </tr>

            <tr>
              <th><%= f.label :フリガナ %></th>
              <td>【セイ】<%= f.text_field :last_name_kana %></td>
              <td>【メイ】<%= f.text_field :first_name_kana %></td>
            </tr>

            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
              <th><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <th><%= f.label :住所 %></th>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <th><%= f.label :電話番号（ハイフンなし） %></th>
              <td><%= f.telephone_field :telephone_number %></td>
            </tr>

            <tr>
              <th>
                <%= f.label :パスワード %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %><br />
              </th>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>

            <tr>
              <th><%= f.label :パスワード（確認用） %></th>
              <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
            </tr>

            <tr>
              <td><%= f.submit "新規登録", class: "btn btn-info" %></td>
            </tr>

          </tbody>
        <% end %>

          <table class="table table-borderless">
            <h4>既に登録済みの方</h4>
            <%= render "public/shared/links" %>
          </table>

    </div>
  </div>
</div>

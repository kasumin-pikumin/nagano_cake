<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-lg-8">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>

      </table>
    </div>

    <div class="col-lg-4">
    <h5>請求情報</h5>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @shopping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
<h5>注文内容</h5>
<table class="table table-bordered">
  <thead>
    <tr>
      <th ="col">商品</th>
      <th ="col">単価(税込)</th>
      <th ="col">個数</th>
      <th ="col">小計</th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>


  </tbody>
</table>
</div>


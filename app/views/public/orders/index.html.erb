<div class="container">
  <div class="row">
    <div class="col-lg">

<h3>注文履歴一覧</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th ="col">購入日時</th>
      <th ="col">配送先</th>
      <th ="col">注文商品</th>
      <th ="col">支払金額</th>

      <th ="col">注文詳細</th>
    </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %>
        <% end %>
      </td>
      <td><%= order.payment.to_s(:delimited) %>円</td>
      <td><%= link_to "表示する", show_order_path(order.id), class: "btn btn-info" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>

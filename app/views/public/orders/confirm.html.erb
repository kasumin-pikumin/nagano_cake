
<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>

        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
        <% @total_price += cart_item.subtotal %>
        <% end %>
      </table>
    </div>

    <div class="col-lg-4">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= @shopping_cost %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <% @total_price += @shopping_cost %>
        <tr>
          <th>請求金額</th>
          <td><%= @total_price %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col">
      <h5>支払方法</h5>
      <p><%= @order.payment_method_i18n %></p>

      <h5>お届け先</h5>
      <p><%= @order.postal_code %></p>
      <p><%= @order.address %></p>
      <p><%= @order.name %></p>
      
          <%= form_with model: @order, url: orders_path ,method: :post do |f| %>
            <%= f.hidden_field :item_id %>
            <%= f.hidden_field :amount %>
            
            
            
            <%= f.submit :注文を確定する, class: "btn btn-success" %>
          <% end %>
    </div>
  </div>
</div>


